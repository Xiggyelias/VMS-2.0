# Application Configuration
APP_NAME="Vehicle Registration System"
APP_VERSION="2.0.0"
APP_DESCRIPTION="AU Vehicle Registration and Management System"
APP_ENV=development
BASE_URL=http://localhost/system/frontend

# Database Configuration
DB_HOST=localhost
DB_USERNAME=root
DB_PASSWORD=
DB_NAME=vehicleregistrationsystem
DB_CHARSET=utf8mb4

# Session Configuration
SESSION_NAME=vehicle_registration_session
SESSION_LIFETIME=3600
SESSION_SECURE=false
SESSION_HTTP_ONLY=true
SESSION_SAMESITE=Strict

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@au.ac.zw
SMTP_FROM_NAME="AU Vehicle Registration System"

# Google OAuth Configuration
GOOGLE_CLIENT_ID=561037470081-3fs3roso7v8gnq9idijoap15tn7sqr3l.apps.googleusercontent.com
ALLOWED_GOOGLE_DOMAIN=africau.edu

# Security Configuration
PASSWORD_MIN_LENGTH=12
LOGIN_MAX_ATTEMPTS=5
LOGIN_LOCKOUT_TIME=900

# Vehicle Registration Settings
MAX_VEHICLES_PER_STUDENT=1
MAX_VEHICLES_PER_STAFF=5
MAX_VEHICLES_PER_GUEST=3
VEHICLE_REGISTRATION_EXPIRY_DAYS=365

# File Upload Settings
MAX_FILE_SIZE=5242880
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp

# Pagination Settings
ITEMS_PER_PAGE=20
MAX_PAGES_DISPLAY=5

# Error Handling
DISPLAY_ERRORS=true
LOG_ERRORS=true

# Rate Limiting
RATE_LIMITING_ENABLED=true
RATE_LIMITING_MAX_REQUESTS=60
RATE_LIMITING_MAX_LOGIN_ATTEMPTS=5
